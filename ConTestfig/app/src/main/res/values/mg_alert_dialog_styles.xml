<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mg_alert_dialog">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:background">@drawable/bg_mg_alert_dialog</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mg_alert_dialog_title" parent="android:Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#2DBE60</item>
        <item name="android:padding">12dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="mg_alert_dialog_title_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.33dp</item>
        <item name="android:src">#C5EED3</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="mg_alert_dialog_content" parent="android:Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#525252</item>
        <item name="android:textSize">16.5sp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="mg_alert_dialog_btn_layout_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:src">#EDEDED</item>
        <item name="android:layout_marginTop">22dp</item>
    </style>

    <style name="mg_alert_dialog_btn_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="mg_alert_dialog_btn_positive" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">16.5sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:minWidth">118dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="mg_alert_dialog_btn_negative" parent="mg_alert_dialog_btn_positive" />

    <style name="mg_alert_dialog_btn_divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">#EDEDED</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="mg_alert_dialog_progress_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="mg_alert_dialog_progress_bar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:progressDrawable">@drawable/bg_version_update_progress_bar</item>
        <item name="android:indeterminate">false</item>
    </style>

    <style name="mg_alert_dialog_progress_text" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">10.5sp</item>
        <item name="android:textColor">#9F9F9F</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="mg_alert_dialog_progress_err_text" parent="mg_alert_dialog_progress_text">
        <item name="android:textColor">#FF0000</item>
        <item name="android:visibility">gone</item>
    </style>

    <dimen name="mg_alert_dialog_radius">3dp</dimen>
</resources>