<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="嵌套RecyclerView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="嵌套ListView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_nested_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="嵌套NestedScrollView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="嵌套ScrollView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_web_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="嵌套WebView"
        android:textAllCaps="false" />

</LinearLayout>
