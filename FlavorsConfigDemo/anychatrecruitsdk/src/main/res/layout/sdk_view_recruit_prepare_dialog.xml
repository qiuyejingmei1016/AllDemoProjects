<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/sdk_ico_recruit_prepare"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdk_dp_20"
                android:layout_marginRight="@dimen/sdk_dp_20"
                android:layout_weight="1"
                android:gravity="center"
                android:text="温馨提示"
                android:textColor="@color/sdk_white"
                android:textSize="@dimen/sdk_sp_19"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/sdk_dp_20"
                android:layout_marginRight="@dimen/sdk_dp_20"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/sdk_recruit_prepare_tip"
                android:textColor="@color/sdk_back_color"
                android:textSize="@dimen/sdk_sp_16"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/sdk_dp_30"
                android:layout_marginRight="@dimen/sdk_dp_30"
                android:layout_marginBottom="@dimen/sdk_dp_10"
                android:gravity="center_horizontal|center_vertical">
            <TextView
                    android:id="@+id/sdk_prepare_confirm_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/sdk_bg_btn_round_style"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/sdk_recruit_confirm"
                    android:textColor="@color/sdk_white"
                    android:textSize="16sp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>