<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

    <LinearLayout
            android:layout_width="@dimen/sdk_dp_130"
            android:layout_height="@dimen/sdk_dp_110"
            android:background="@drawable/sdk_loading_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/sdk_dp_10"
            android:paddingLeft="@dimen/sdk_dp_20"
            android:paddingRight="@dimen/sdk_dp_20"
            android:paddingTop="@dimen/sdk_dp_10">

        <ProgressBar
                android:layout_width="@dimen/sdk_dp_35"
                android:layout_height="@dimen/sdk_dp_35"
                android:layout_gravity="center_horizontal"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/sdk_dialog_loading"
                android:indeterminateOnly="true"/>

        <TextView
                android:id="@+id/sdk_recruit_loading_tip_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sdk_dp_15"
                android:singleLine="true"
                android:textColor="#f0f0f0"
                android:textSize="@dimen/sdk_sp_12"/>
    </LinearLayout>

</RelativeLayout>