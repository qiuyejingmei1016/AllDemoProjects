<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/sdk_ico_queue_background"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/sdk_recruit_title_bar_view"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sdk_dp_20"
            android:layout_weight="1">
        <!--background-->
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/sdk_dp_20"
                android:layout_marginRight="@dimen/sdk_dp_20"
                android:scaleType="centerCrop"
                android:src="@drawable/sdk_ico_queue_wait"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/sdk_dp_30"
                android:paddingRight="@dimen/sdk_dp_30">

            <!--tip-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/sdk_recruit_queue_tip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sdk_dp_15"
                        android:layout_marginBottom="@dimen/sdk_dp_15"
                        android:gravity="center"
                        android:text="等待时间"
                        android:textColor="@color/sdk_queue_time_color"
                        android:textSize="@dimen/sdk_sp_16"/>
                <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/sdk_px_2"
                        android:background="@color/sdk_line_color"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                    <ImageView
                            android:id="@+id/sdk_recruit_queue_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/sdk_dp_10"
                            android:layout_marginRight="@dimen/sdk_dp_10"
                            android:src="@drawable/sdk_ico_queue_time"/>
                    <TextView
                            android:id="@+id/sdk_recruit_queue_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="#2E8DED"
                            android:textSize="@dimen/sdk_sp_50"/>
                </LinearLayout>
                <TextView
                        android:id="@+id/sdk_recruit_wait_tip_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="正在为您接入面试官请稍等..."
                        android:textColor="@color/sdk_first_text_color"
                        android:textSize="@dimen/sdk_sp_18"/>
            </LinearLayout>

            <!--VideoView-->
            <RelativeLayout
                    android:id="@+id/sdk_recruit_root_video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/sdk_dp_20"
                    android:layout_weight="1"
                    android:background="@color/sdk_back_color"
                    android:visibility="invisible">
                <VideoView
                        android:id="@+id/sdk_recruit_video_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                <ProgressBar
                        android:id="@+id/sdk_recruit_video_loading_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>
                <ImageView
                        android:id="@+id/sdk_recruit_video_play_try_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sdk_recruit_video_play_try"
                        android:visibility="gone"/>
            </RelativeLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sdk_dp_10"
            android:layout_marginBottom="@dimen/sdk_dp_20"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/sdk_recruit_end_queue_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sdk_dp_20"
                android:layout_marginLeft="@dimen/sdk_dp_20"
                android:layout_marginEnd="@dimen/sdk_dp_10"
                android:layout_marginRight="@dimen/sdk_dp_10"
                android:layout_weight="1"
                android:background="@drawable/sdk_bg_btn_white_style"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/sdk_recruit_end_queuing"
                android:textColor="#2E8DED"
                android:textSize="16sp"/>
        <TextView
                android:id="@+id/sdk_recruit_temp_pende_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sdk_dp_10"
                android:layout_marginLeft="@dimen/sdk_dp_10"
                android:layout_marginEnd="@dimen/sdk_dp_20"
                android:layout_marginRight="@dimen/sdk_dp_20"
                android:layout_weight="1"
                android:background="@drawable/sdk_bg_btn_white_style"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/sdk_recruit_temp_pendeing"
                android:textColor="#2E8DED"
                android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>